<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/holidays"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="20dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/category_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:layout_marginTop="150dp"
        android:gravity="center_vertical"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.liminal.eagamification.VerticalTextView
                android:id="@+id/category_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:includeFontPadding="false"
                android:rotation="180"
                android:fontFamily="@font/lemon_milk_bold"
                android:text="Holidays"
                android:layout_marginStart="-20sp"
                android:textAllCaps="true"
                android:textColor="@color/cardview_dark_background"
                android:textSize="60sp" />

            <Button
                android:id="@+id/check_rewards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/gravity_regular"
                android:textAllCaps="false"
                android:paddingStart="20sp"
                android:paddingEnd="20sp"
                android:elevation="10sp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/check_rewards_button_drawable"
                android:text="Check Rewards" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/category_title"
                android:layout_marginTop="180sp"
                android:padding="10sp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:text="TextView" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

